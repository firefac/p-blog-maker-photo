page{
  background-color: #fff;
}

.container {
  box-sizing: border-box;
  background-color: #fff;
  font-family: PingFangSC-Light, helvetica, 'Heiti SC';
}

.container .banner {
  width: 750rpx;
  height: 417rpx;
}

.container .banner image {
  width: 100%;
  height: 417rpx;
}

.container .banner .title {
  font-size: 35rpx;
  font-weight: bold;
  padding: 5rpx 40rpx 5rpx 40rpx;
  display: block;
}

.container .article-follow, .container .article-follow text{
  line-height: 200rpx;
  font-size: 50rpx;
  text-align: center;
  color: #000;
  font-weight: bold;
}

.img-collects {
  height: 50rpx;
  width: 120rpx;
  padding: 5rpx;
  background-color: rgba(0,0,0,0.5);
  font-size: 20rpx;
  box-sizing: border-box;
  background-size: 55rpx auto;
  position: absolute;
  right: 10rpx;
  bottom: 20rpx;
  border-radius: 10px;
}

.noContent{
  display: block;
  line-height: 80rpx;
  text-align: center;
  margin-top: 100rpx;
  font-size: 30rpx;
  color: #666;
}

